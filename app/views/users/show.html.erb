<h1>
  <%= image_tag @user.gravatar_url, class: "Avatar" %>
  <%= @user.name %>
</h1>

<%= link_to "Requirements", user_requirements_path(@user.id) %>
<p>Manager:
  <% if @user.manager %>
    Yes
  <% else %>
    No
  <% end %>
</p>

<div class="evidence">
  <h2>Evidence</h2>
  <ul>
  <% @user.evidences.each do |evidence| %>
    <li>
      <%= link_to evidence.requirement.title, requirement_evidence_path(evidence.requirement, evidence) %>
    </li>
  <% end %>
  </ul>
</div>

<hr>
<div class="profile">
  <h2><%= @user.name %>'s requirements</h2>
    <table>
      <tr>
        <td>
          <label>Title</label>
        </td>
        <td>
          <label>Description</label>
        </td>
        <td>
          <label>Action</label>
        </td>
      </tr>
      <% @requirements.each do |requirement| %>
      <tr>
        <td>
          <%= requirement.title %>
        </td>
        <td>
          <%= requirement.description %>
        </td>
        <td>
          <%= button_to require_button_text(requirement), assign_requirement_path(id: requirement.id, user_id: @user.id) %>
        </td>
      </tr>
    <% end %>
    </table>
  </ul>
</div>
<hr>

<%= link_to "Back", users_path %>
<%= link_to "Edit", edit_user_path(@user.id) %>
