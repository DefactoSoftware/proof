<h1>All requirements</h1>
<table>
<tr>
    <td>
      <label>Title</label>
    </td>
    <td>
      <label>Description</label>
    </td>
    <td colspan="3">
      <label>Months valid</label>
    </td>
    <td>
      <label>#</label>
    </td>
  </tr>
<% @requirements.each do |requirement| %>
  <tr>
    <td>
      <%= link_to requirement.title, edit_requirement_path(requirement) %>
    </td>
    <td>
      <%= requirement.description %>
    </td>
    <td>
      <%= requirement.within_months %>
    </td>
    <td>
      <%= link_to "delete", requirement, method: :delete, data: {confirm: "Really?"} %>
    </td>
    <td>
      <%= link_to "I did this", new_requirement_evidence_path(requirement) %>
    </td>
  </tr>
<% end %>
</table>

<br>
<h1>Add requirements</h1>
  <%= form_for @requirement, url: {action: "create"} do |f| %>
    <%= f.label "Title" %> <%= f.text_field :title %>
    <%= f.label "Description" %> <%= f.text_area :description %>
    <%= f.label "Months valid" %> <%= f.number_field :within_months %>
    <%= f.submit "Create" %>
  <% end %>
